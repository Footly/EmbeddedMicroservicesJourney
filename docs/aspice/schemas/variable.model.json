{
    "$schema": "./codearchitect.schema.json",
    "type": "object",
    "title": "Variable",
    "properties": {
        "id": {
            "type": "string",
            "hidden": true
        },
        "label": {
            "type": "string",
            "hidden": true
        },
        "tags": {
            "hidden": true,
            "type": "array",
            "items": {
                "type": "string"
            },
            "const": [
                "variable"
            ]
        },
        "icon": {
            "hidden": true,
            "type": "string",
            "const": "symbol-variable"
        },
        "visibility": {
            "$ref": "./visibility.model.json",
            "hidden": true,
            "editable": true
        },
        "type": {
            "hidden": true,
            "editable": true,
            "type": "string",
            "search": {
                "query": [
                    [
                        {
                            "field": "tags",
                            "regex": "type"
                        }
                    ]
                ]
            }
        },
        "description": {
            "hidden": true,
            "editable": true,
            "multiline": true,
            "type": "string"
        },
        "qualifiers and pointers": {
            "type": "string",
            "hidden": true,
            "editable": true
        },
        "array": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "hidden": true,
            "editable": true
        }
    }
}