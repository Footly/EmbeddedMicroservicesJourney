{
  "$schema": "./codearchitect.schema.json",
  "$id": "aspice_profile.model.json",
  "title": "Project",
  "type": "object",
  "root": true,
  "properties": {
    "id": {
      "type": "string",
      "hidden": true
    },
    "label": {
      "type": "string",
      "hidden": true
    },
    "tags": {
      "hidden": true,
      "type": "array",
      "items": {
        "type": "string"
      },
      "const": [
        "project"
      ]
    },
    "icon": {
      "hidden": true,
      "type": "string",
      "const": "symbol-method"
    },
    "$model": {
      "type": "string",
      "hidden": true
    },
    "description": {
      "hidden": true,
      "editable": true,
      "multiline": true,
      "type": "string"
    },
    "SWE1-Requirements": {
      "type": "array",
      "items": {
        "$ref": "./reqs.model.json"
      },
      "properties": {
        "icon": {
          "hidden": true,
          "editable": false,
          "type": "string",
          "const": "folder"
        }
      },
      "autoincrement": {
        "prefix": "REQ-"
      },
      "editable": false
    },
    "SWE2-SoftwareArchitecturalDesign": {
      "type": "object",
      "properties": {
        "icon": {
          "hidden": true,
          "editable": false,
          "type": "string",
          "const": "folder"
        },
        "Components": {
          "type": "array",
          "items": {
            "$ref": "./component.model.json"
          },
          "properties": {
            "icon": {
              "hidden": true,
              "editable": false,
              "type": "string",
              "const": "folder"
            }
          },
          "editable": false
        },
        "Interfaces": {
          "type": "array",
          "items": {
            "$ref": "./interface.model.json"
          },
          "properties": {
            "icon": {
              "hidden": true,
              "editable": false,
              "type": "string",
              "const": "folder"
            }
          },
          "editable": false
        }
      },
      "editable": false
    },
    "SWE5-IntegrationTests": {
      "type": "array",
      "items": {
        "$ref": "./integrationtest.model.json"
      },
      "properties": {
        "icon": {
          "hidden": true,
          "editable": false,
          "type": "string",
          "const": "folder"
        }
      },
      "autoincrement": {
        "prefix": "ITEST-"
      },
      "editable": false
    },
    "SWE6-QualificationTests": {
      "type": "array",
      "items": {
        "$ref": "./qualificationtest.model.json"
      },
      "properties": {
        "icon": {
          "hidden": true,
          "editable": false,
          "type": "string",
          "const": "folder"
        }
      },
      "autoincrement": {
        "prefix": "QTEST-"
      },
      "editable": false
    }
  },
  "view": [
    {
      "title": "SWE1 View",
      "steps": [
        {
          "tool": "shell",
          "args": [
            "python3",
            "/workspaces/EmbeddedMicroservicesJourney/docs/aspice/python_scripts/generate_view_md.py",
            "--json",
            "${path}",
            "--id",
            "${id}",
            "--blueprint",
            "/workspaces/EmbeddedMicroservicesJourney/docs/aspice/python_scripts/swe1_blueprint.md",
            "--format",
            "html"
          ]
        }
      ]
    },
    {
      "title": "SWE6 View",
      "steps": [
        {
          "tool": "shell",
          "args": [
            "python3",
            "/workspaces/EmbeddedMicroservicesJourney/docs/aspice/python_scripts/generate_view_md.py",
            "--json",
            "${path}",
            "--id",
            "${id}",
            "--blueprint",
            "/workspaces/EmbeddedMicroservicesJourney/docs/aspice/python_scripts/swe6_blueprint.md",
            "--format",
            "html"
          ]
        }
      ]
    }
  ]
}