{
  "$schema": "./codearchitect.schema.json",
  "type": "object",
  "title": "Requirement",
  "properties": {
    "id": {
      "type": "string",
      "hidden": true
    },
    "label": {
      "type": "string",
      "hidden": true
    },
    "tags": {
      "hidden": true,
      "type": "array",
      "items": {
        "type": "string"
      },
      "const": [
        "reqs"
      ]
    },
    "description": {
      "hidden": true,
      "editable": true,
      "multiline": true,
      "type": "string"
    },
    "impact": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "hidden": true,
      "editable": true
    },
    "release": {
      "type": "string",
      "hidden": true,
      "editable": true
    },
    "isApproved": {
      "type": "boolean",
      "hidden": true,
      "editable": true
    },
    "acceptanceCriteria": {
      "type": "string",
      "hidden": true,
      "editable": true
    },
    "type": {
      "type": "string",
      "enum": [
        "functional",
        "safety",
        "security",
        "metrics"
      ],
      "hidden": true,
      "editable": true
    },
    "icon": {
      "hidden": true,
      "type": "string",
      "const": "book"
    }
  }
}